<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="15dp"
    android:paddingStart="15dp">

    <EditText
        android:id="@+id/mPrivateKeyEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/bg_input_mnemonic"
        android:gravity="start"
        android:hint="请输入私钥"
        android:inputType="textMultiLine"
        android:lines="4"
        android:textColorHint="@color/wallet_import_mnemonic_input_mnemonic_hint"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/mPasswordEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@null"
        android:hint="请输入钱包密码"
        android:inputType="textPassword"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <EditText
        android:id="@+id/mRepeatPasswordEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="请重新输入已设置密码"
        android:inputType="textPassword"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <EditText
        android:id="@+id/mPromptEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="密码提示信息(选填)"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <CheckBox
        android:id="@+id/mAgreeCb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="我已经仔细阅读并同意服务及隐私条款"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/mConfirmBtn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_btn_start_import"
        android:gravity="center"
        android:text="开始导入"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</LinearLayout>